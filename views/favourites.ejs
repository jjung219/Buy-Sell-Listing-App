<body>
  <!-- Navigation -->
  < <header>
    <%- include('partials/_header') %>
    </header>
    <body>
      <%  for(let i = itemsArr.length -1; i = 0; i--)  { let item = itemsArr[i];%>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <a href="#"><img class="card-img-top" src="<%= itemsArr[item].photo_url %>"> </a>
                <div class="card-body">
                  <h4 class="card-title">
                    <a href="#"><%= itemsArr[item].name %></a>
                  </h4>
                  <h5>$<%= itemsArr[item].price %></h5>
                  <p class="card-text"><%= itemsArr[item].description %></p>
                </div>
                <span> <button>message</button></span>
                <div class="card-footer">
                  <small><form method="POST" action="/favourites"><button>favourit</button></form></small>
                  <small>condition = <%= itemsArr[item].condition %></small>
                  <% if (itemsArr[item].active) { %>
                  <small>For Sale</small>
                  <% } else { %>
                  <span style="color: red;">SOLD</span>
                  <% } %>
                </div>
              </div>
            </div>
            <% } %>
    </body>

