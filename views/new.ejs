  <body>
    <div class="container">
      <h1>Create New Listing</h1>
      <form action="/new" method="POST">
        <div class="form-group">
          <label for="inputname4">Item</label>
          <input type="text" class="form-control" id="inputname4" placeholder="Enter item..." name="name">
        </div>
        <div class="form-group">
          <label for="Price4">Price</label>
          <input type="number" class="form-control" id="Price4" placeholder="Enter price..." name="price">
        </div>
        <div class="form-group">
          <label for="inputImage">Image URL</label>
          <input type="text" class="form-control" id="inputImage" placeholder="Enter image_url..." name="photo_url">
        </div>
        <div class="form-group">
          <label for="inputcondition">Condition</label>
          <select id="inputcondition" class="form-control" name="condition">
            <option selected>Choose...</option>
            <option>Used</option>
            <option>New</option>
          </select>
        </div>
        <div class="form-group">
          <label for="inputDescription">Description</label>
          <textarea class="form-control" placeholder="Enter description..." name="description" rows="5" name="description"></textarea>
        </div>
          <button type="submit" class="btn btn-primary">Create</button>
      </form>
    </div>

